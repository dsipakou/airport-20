<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/arrival_expected_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/arrival_city"
            app:fontFamily="@font/roboto"
            tools:text="10:10"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            style="@style/TitleText"/>
    <TextView
            android:id="@+id/arrival_city"
            tools:text="Vienna (VIE)"
            app:fontFamily="@font/roboto"
            style="@style/TitleText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/arrival_expected_time"/>

    <TextView
            android:id="@+id/arrival_code"
            tools:text="AA6474"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrival_city"
            app:fontFamily="@font/roboto"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            style="@style/SubTitleText"
            android:layout_marginTop="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrival_company"
            tools:text="British Airways"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/arrival_code"
            app:fontFamily="@font/roboto"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
    />
    <TextView
            android:text="Actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/arrival_code"
            app:layout_constraintEnd_toStartOf="@id/arrival_actual_time"
            app:fontFamily="@font/roboto"
            android:id="@+id/arrival_actual_time_label"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            style="@style/SubTitleText"/>
    <TextView
            android:id="@+id/arrival_actual_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/roboto"
            tools:text="10:55"
            style="@style/SubTitleText"
            app:layout_constraintBaseline_toBaselineOf="@+id/arrival_actual_time_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrival_status"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Arrived"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>